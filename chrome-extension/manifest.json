{
  "manifest_version": 3,
  "name": "URL Opener",
  "version": "1.1",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "recorder.js"],
      "run_at": "document_start"
    }
  ]
}
