{
  "manifest_version": 3,
  "name": "URL Opener Extension",
  "version": "1.0",

  "permissions": ["tabs"],

  "action": {
    "default_popup": "popup/index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
