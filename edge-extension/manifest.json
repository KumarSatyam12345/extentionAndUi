{
  "manifest_version": 3,
  "name": "URL Opener",
  "version": "1.5",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "recorder.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageConsoleRecorder.js", "replayExecutor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
