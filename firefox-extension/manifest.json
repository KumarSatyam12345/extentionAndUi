{
  "manifest_version": 2,
  "name": "Universal URL Opener",
  "version": "1.0",
  "description": "Opens a URL and injects a header if extension is installed.",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "urlopener@example.com",
      "strict_min_version": "57.0"
    }
  }
}
